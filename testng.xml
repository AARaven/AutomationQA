<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="MathTest">
    <test name="MainTest">
        <parameter name="valueForIntegerTests" value="-17"/>
        <parameter name="valueForDoublesTests" value="14.5"/>
        <parameter name="valueTestingContext" value="20"/>
        <groups>
            <run>
                <include name="tester"/>
                <include name="context"/>
            </run>
        </groups>
        <classes>
            <class name="MathUtilTests.MathUtilTests"/>
        </classes>
    </test>
    <test name="FailTest">
        <parameter name="valueForFailTest" value="12.2"/>
        <parameter name="valueForDependentTest" value="13.2"/>
        <groups>
            <run>
                <include name="fail"/>
                <include name="dependent"/>
            </run>
        </groups>
        <classes>
            <class name="MathUtilTests.MathUtilTests"/>
        </classes>
    </test>
</suite>
<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="MathTest">
    <listeners>
        <listener class-name="MathUtilTests.CustomListener"/>
    </listeners>
    <test name="mathUtilTests">
        <parameter name="firstValue" value="-17"/>
        <parameter name="secondValue" value="14.21"/>
        <groups>
            <run>
                <include name="integers"/>
                <include name="doubles"/>
                <exclude name="fail"/>
            </run>
        </groups>
        <classes>
            <class name="MathUtilTests.MathUtilTests"/>
        </classes>
    </test>
    <test name="TestsFail">
        <parameter name="secondValue" value="9.0"/>
        <groups>
            <run>
                <include name="fail"/>
            </run>
        </groups>
        <classes>
            <class name="MathUtilTests.MathUtilTests"/>
        </classes>
    </test>
</suite>
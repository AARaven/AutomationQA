<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite description="AccountAndOrderingTests" verbose="2">

    <test description="CreationAnAccount">
        <classes>
            <class description="com.automationpractice.Tests.Positive.AccountTest">
                <methods>
                    <include description="creationAnAccount"/>
                </methods>
            </class>
        </classes>
    </test>

    <test description="VerifyingAnAccount">
        <classes>
            <class description="com.automationpractice.Tests.Positive.AccountTest">
                <methods>
                    <include description="verifyPersonalInfo"/>
                    <include description="verifyAddress"/>
                </methods>
            </class>
        </classes>
    </test>

    <test description="Ordering">
        <classes>
            <class description="com.automationpractice.Tests.Positive.OrderTest">
                <methods>
                    <include description="searchProductAndOrdering"/>
                    <include description="verifyingDownloadedFile"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>